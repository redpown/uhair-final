        </Grid>
        <Button x:Name="bnt_new_user" Content="Novo Usuario" HorizontalAlignment="Left" Margin="51.714,114.571,0,0" VerticalAlignment="Top" Width="80.714" Click="bnt_new_user_Click"/>
